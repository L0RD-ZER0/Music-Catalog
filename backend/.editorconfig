# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,pyi}]
indent_size = 4

[*.{toml,txt}]
indent_size = 4

# 2 space indentation
[*.{json,yml,yaml,html}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
