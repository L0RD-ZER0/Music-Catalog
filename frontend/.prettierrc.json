{
  "$schema": "http://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "printWidth": 80,
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 88,
        "proseWrap": "always"
      }
    }
  ]
}
